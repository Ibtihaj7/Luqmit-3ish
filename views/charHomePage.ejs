<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لقمة عيش</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<header>
    <div id="menu-bar" class="fas fa-bars"></div>

    <a style="text-decoration: none;" href="/charity" class="logo"><span>لـ</span>قمة عيش</a>
        <nav class="navbar">
        <a style="text-decoration: none;" href="#packages">المطاعم</a>
        <a style="text-decoration: none;" href="#services">العروضات</a>
        <a style="text-decoration: none;" href="#book">حجز</a>
        <a style="text-decoration: none;" href="/changePassword">تغيير كلمة المرور</a>
        <a style="text-decoration: none;" href="/DeleteAcount">الغاء العضوية</a>
    </nav>
     <div class="dropdown">
     <div class="icons">
    <i class="fas fa-search" id="search-btn"></i>
    <a href = "/user" class="fas fa-user" id="login-btn"></a>
     </div> 
    </div>

</header>


<!-- packages section starts  -->

<section class="packages" id="packages">

    <h1 class="heading">
        <span>ا</span>
        <span>لـ</span>
        <span>ـمـ</span>
        <span>طـ</span>
        <span>ا</span>
        <span>عـ</span>
        <span>ـم</span>
    </h1>
   
    <div class="box-container">
    <% 
        if(resdata.length > 0 ){
            resdata.forEach((item) => {
                if(item.type === 'resturant'){ %>
                <div class="box">
                    <img src="imags/١١.png" alt="">
                    <div class="content 1">
                        <h3> <i class="fas fa-map-marker-alt"></i> مطعم <%= item.name %> </h3>
                        <br><br>
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                        </div>
                        <br><br><br><br>
                        <a href="#services" class="btn">  تفقد المطعم </a>
                    </div>
                </div>
                <% 
            }
            })     
        }
    %>

    </div>

</section>

<!-- packages section ends -->

<!-- services section starts  -->

<section class="services" id="services">

    <h1 class="heading">
        <span id='resturant'>مطعم كان يا ما كان</span>
        
    </h1>

    <div class="box-container">

        <div class="box x 1">
            <i class="fas fa-utensils"></i>
            <h3>وجبات رئيسية</h3>
           <input type='text' placeholder="بيتزا,جاج,....الخ">
          <p> : الكمية</p>
            <input type="number" placeholder="0">
            <a href="#services" class="btn"> حجز </a>

        </div>
        <div class="box x 2">
            <i class="fas fa-utensils"></i>
            <h3>ساندويشات</h3>
            <input type='text' placeholder='شاورما,كباب,بطاطا ,.....الخ'>
            <p> : الكمية</p>
            <input type="number" placeholder="0">
            <a href="#services" class="btn"> حجز </a>
        </div>
        <div class="box x 3">
            <i class="fas fa-utensils"></i>
            <h3>عصائر</h3>
             <input type='text' placeholder="عصير برتقال, عصير مانجا,... الخ">
            <p> : الكمية</p>
            <input type="number" placeholder="0">
            <a href="#services" class="btn"> حجز </a>
        </div>
        <div class="box x 4">
            <i class="fas fa-utensils"></i>
            <h3>حلويات</h3>
             <input type='text' placeholder='كيك, دونات,...الخ'>
            <p> : الكمية</p>
            <input type="number" placeholder="0">
            <a href="#services" class="btn"> حجز </a>
        </div>
        <div class="box x 5">
            <i class="fas fa-utensils"></i>
            <h3>شوربات</h3>
             <input type='text' placeholder='شوربة عدس, شوربة فريكية,...الخ'>
            <p> : الكمية</p>
            <input type="number" placeholder="0">
            <a href="#services" class="btn"> حجز </a>
        </div>
        <div class="box x 6">
            <i class="fas fa-utensils"></i>
            <h3>وجبات سريعة</h3>
             <input type='text' placeholder='بطاطا, برجر,....الخ'>
            <p> : الكمية</p>
            <input type="number" placeholder="0">
            <a href="#services" class="btn"> حجز </a>
        </div>
        

    </div>

</section>

<!-- services section ends -->

<!-- book section starts  -->

<section class="book" id="book">

    <h1 class="heading">
        <span>حـ</span>
        <span>جـ</span>
        <span>ز</span>
        <span class="space"></span>
        <span>ا</span>
        <span>لـ</span>
        <span>آ</span>
        <span>ن</span>

    </h1>

    <div class="row">

        <div class="image">
            <img src="imags/img1.jpeg" alt="">
        </div>

        <form action="">
            <div class="inputBox">
                <h3>اسم الجمعية</h3>
                <input type="text" placeholder="ادخل هنا">
            </div>
            <div class="inputBox">
                <h3>كم العدد</h3>
                <input type="number" placeholder="عدد افراد الجمعية">
            </div>
            <div class="inputBox">
                <h3>رقم الهاتف</h3>
                <input type="number" placeholder="رقم الهاتف او الجوال">
                <h3>الحجوزات</h3>
                <textarea id='text' type="text"></textarea>
            </div>
            <div class="inputBox">
               
            </div>
            <input type="submit" class="btn" value="احجز الان">
        </form>

    </div>

</section>

<!-- book section ends -->

</body>
</html>