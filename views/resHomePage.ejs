            <div class="box x 6">
                <form action="/meal/m6" method="POST">
                    <i class="fas fa-utensils"></i>
                    <h3>وجبات سريعة</h3>
                    <input name="discription6" type='text' placeholder=<%= res6 %>><br><br>
                    <label> الكمية: </label>
                    <input name="quantity6" type="number" min="0" placeholder=<%= res66 %>><br>
                    <button href="#services" class="btn" type="submit"> حفظ التعديلات </button>
                </form>
            </div>
        </div>


    <h1 class="heading">
        <span>حجوزات المطعم</span>
    </h1>
    <section id="book">


    <div class="box-container box-container">
        <% 
            if(resdata.length > 0 ){
                resdata.forEach((item) => { %>
                    <div  class="box x 6">   
                            <form action="/meal/delete_order/<%= item.id %>?_method=DELETE" method="POST">
                                <i class="fas fa-utensils"></i><br>
                                <label> اسم الجمعية :  <%= item.name %>  </label><br>
                                <label > نوع الوجبة: <%= item.category %></label><br>
                                <label > اسم الوجبة:  <%= item.discription %></label><br>
                                <label> التاريخ: <%= item.date %></label><br>
                                <label>الكمية: <%= item.quantity %></label><br>

                                <button href="#services" class="btn" type="submit">حذف الطلب</button><br>
                            </form>
                            <form action = "/profile/display/<%= item.account_id %>?" method = "POST">
                                <button class="btn" type="submit">  عرض معلومات الجمعية </button>
                            </form>
                    </div>
                    <% 
                })     
            }
        %>
    
        </div>
    </section>
</section>

<!-- book section ends -->

</body>
</html>
