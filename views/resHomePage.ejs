            <div class="box x 3">
                <form action="/meal/m3" method="POST">
                    <i class="fas fa-utensils"></i>
                    <h3>عصائر</h3>
                    <input name="discription3" type='text' placeholder=<%= res3 %>  >  <br><br>
                    <label> الكمية: </label>
