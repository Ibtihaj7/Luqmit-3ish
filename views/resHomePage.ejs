<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لقمة عيش</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body><br><br><br><br>
<header>
    <div id="menu-bar" class="fas fa-bars"></div>
    

    <a style="text-decoration: none;" href="/" class="logo"><span>لـ</span>قمة عيش</a>
        <nav class="navbar">
        <a style="text-decoration: none;" href="#services">العروضات</a>
        <a style="text-decoration: none;" href="#book">الحجوزات</a>
        <a style="text-decoration: none;" href="#contact">التواصل معنا</a>
        <a style="text-decoration: none;" href="/changePassword">تغيير كلمة المرور</a>
    </nav>
     <div class="dropdown">
     <div class="icons">
    <i class="fas fa-search" id="search-btn"></i>
    <a href = "/user" class="fas fa-user" id="login-btn"></a>
     </div> 
    </div>

</header>

<!-- services section starts  -->

<section class="services" id="services">

    <div class="box-container">

        <div class="box x 1">
            <form action="/meal/m1" method="POST">
            <i class="fas fa-utensils"></i>
            <h3>وجبات رئيسية</h3>
           <input name="discription1" type='text' placeholder="مجدرة,اوزي,..."><br><br>
          <label> الكمية: </label>
            <label name="quantity1" type="number" placeholder="0"></label><br>
            <button href="#services" class="btn"> حفظ التعديلات </button>
            </form>
        </div>
        <div class="box x 2">
            <i class="fas fa-utensils"></i>
            <h3>ساندويشات</h3>
            <input name="discription2" type='text' placeholder='شاورما,كباب,بطاطا ,.....الخ'><br><br>
          <label> الكمية: </label>
            <input name="quantity2" type="number" placeholder="0"><br>
            <form action="/meal2" method="POST">
            <button href="#services" class="btn"> حفظ التعديلات </button>
            </form>
            </div>
        <div class="box x 3">
            <i class="fas fa-utensils"></i>
            <h3>عصائر</h3>
             <input name="discription3" type='text' placeholder="عصير برتقال, عصير مانجا,... الخ"><br><br>
          <label> الكمية: </label>
            <input name="quantity3" type="number" placeholder="0"><br>
            <form action="/meal3" method="POST">
            <button href="#services" class="btn"> حفظ التعديلات </button>
            </form>
             </div>
        <div class="box x 4">
            <i class="fas fa-utensils"></i>
            <h3>حلويات</h3>
             <input name="discription4" type='text' placeholder='كيك, دونات,...الخ'><br><br>
          <label> الكمية: </label>
            <input name="quantity4" type="number" placeholder="0"><br>
            <form action="/meal4" method="POST">
            <button href="#services" class="btn"> حفظ التعديلات </button>
            </form>
            </div>
        <div class="box x 5">
            <i class="fas fa-utensils"></i>
            <h3>شوربات</h3>
             <input name="discription5" type='text' placeholder='شوربة عدس, شوربة فريكية,...الخ'><br><br>
          <label> الكمية: </label>
            <input name="quantity5" type="number" placeholder="0"><br>
            <form action="/meal5" method="POST">
            <button href="#services" class="btn"> حفظ التعديلات </button>
            </form>
            </div>
        <div class="box x 6">
            <i class="fas fa-utensils"></i>
            <h3>وجبات سريعة</h3>
             <input name="discription6" type='text' placeholder='بطاطا, برجر,....الخ'><br><br>
          <label> الكمية: </label>
            <input name="quantity6" type="number" placeholder="0"><br>
            <form action="/meal6" method="POST">
            <button href="#services" class="btn"> حفظ التعديلات </button>
            </form>
            </div>


    </div>

</section>

<!-- services section ends -->



<!-- book section starts  -->

<section class="book" id="book">

    <h1 class="heading">
        <span>حـ</span>
        <span>جـ</span>
        <span>و</span>
        <span>ز</span>
        <span>ا</span>
        <span>ت</span>
        <span class="space"></span>
        <span>ا</span>
        <span>لـ</span>
        <span>مـ</span>
        <span>طـ</span>
        <span>عـ</span>
        <span>م</span>


    </h1>
    <div class="box-container">
        <% 
            if(resdata.length > 0 ){
                resdata.forEach((item) => {
                    if(item.type === 'resturant'){ %>
                    <div class="box">
                        <img src="imags/١١.png" alt="">
                        <div class="content 1">
                            <h3> <i class="fas fa-map-marker-alt"></i> مطعم <%= item.name %> </h3>
                            <br><br>
                            <div class="stars">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                            <br><br><br><br>
                            <a href="#services" class="btn">  تفقد المطعم </a>
                        </div>
                    </div>
                    <% 
                }
                })     
            }
        %>
    
        </div>


</section>

<!-- book section ends -->

<script type="module" src="/res.js"></script>
</body>
</html>