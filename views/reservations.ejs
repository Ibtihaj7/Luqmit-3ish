                                    <label>الكمية: <%= item.quantity %></label><br>
                                    <div style="display: flex;">
                                       <div> <button class='fa-solid fa-trash-can' style='font-size:35px;color:#ffa200;' type="submit"></button><br></div>
                                </form>
                                <form action = "/profile/display/<%= item.account_id %>?" method = "POST">
                                    <div><button class='fas' style='font-size:35px;color:#ffa200;' type="submit">&#xf2bb;</button></div>
                                </form>
                                    </div>
                        </div> 
                <% })     
                } %>
            </div>
        </section>
    </section>
    <% } %>
</body>
</html>